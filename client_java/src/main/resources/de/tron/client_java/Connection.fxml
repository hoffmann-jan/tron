<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ProgressBar?>

<fx:root type="javafx.scene.layout.AnchorPane"
	xmlns:fx="http://javafx.com/fxml/1">
	<Label text="Network details" AnchorPane.topAnchor="0"
		AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
		fx:id="networkHead" opacity="0" />
	<HBox AnchorPane.topAnchor="35" AnchorPane.leftAnchor="0"
		AnchorPane.rightAnchor="0" alignment="CENTER_LEFT" spacing="20"
		fx:id="ipLine" opacity="0">
		<Label text="IP" minWidth="80" />
		<TextField HBox.hgrow="ALWAYS" maxWidth="150"
			fx:id="ipInput" />
	</HBox>
	<HBox AnchorPane.topAnchor="65" AnchorPane.leftAnchor="0"
		AnchorPane.rightAnchor="0" alignment="CENTER_LEFT" spacing="20"
		fx:id="portLine" opacity="0">
		<Label text="Port" minWidth="80" />
		<TextField HBox.hgrow="ALWAYS" maxWidth="150"
			fx:id="portInput" />
	</HBox>
	<Label text="Game details" AnchorPane.topAnchor="125"
		AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" fx:id="gameHead"
		opacity="0" />
	<HBox AnchorPane.topAnchor="160" AnchorPane.leftAnchor="0"
		AnchorPane.rightAnchor="0" alignment="CENTER_LEFT" spacing="20"
		fx:id="roomLine" opacity="0">
		<Label text="Room number" minWidth="80" />
		<TextField HBox.hgrow="ALWAYS" maxWidth="150"
			fx:id="roomInput" />
	</HBox>
	<HBox AnchorPane.topAnchor="190" AnchorPane.leftAnchor="0"
		AnchorPane.rightAnchor="0" alignment="CENTER_LEFT" spacing="20"
		fx:id="nameLine" opacity="0">
		<Label text="Name" minWidth="80" />
		<TextField HBox.hgrow="ALWAYS" maxWidth="150"
			fx:id="nameInput" />
	</HBox>
	<HBox AnchorPane.topAnchor="220" AnchorPane.leftAnchor="0"
		AnchorPane.rightAnchor="0" alignment="CENTER_LEFT" spacing="20"
		fx:id="colorLine" opacity="0">
		<Label text="Color" minWidth="80" />
		<ColorPicker HBox.hgrow="ALWAYS" maxWidth="150"
			fx:id="colorInput" />
	</HBox>
	<Button AnchorPane.topAnchor="270" AnchorPane.leftAnchor="240"
		AnchorPane.rightAnchor="110" text="Connect" visible="false"
		fx:id="connectButton" onAction="#connect" />
	<ProgressBar AnchorPane.topAnchor="270"
		AnchorPane.leftAnchor="240" AnchorPane.rightAnchor="110"
		visible="false" fx:id="connectIndicator" />
</fx:root>

