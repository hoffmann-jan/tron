<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Rectangle?>

<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml/1">
	<Rectangle id="connection-back" AnchorPane.topAnchor="0"
		AnchorPane.leftAnchor="80" AnchorPane.rightAnchor="80" AnchorPane.bottomAnchor="0" width="340" height="370" opacity="0" fx:id="background"/> 
	<Label text="Lobby" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" fx:id="title" opacity="0"/>
	<VBox fx:id="playerContainer" AnchorPane.topAnchor="80" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" spacing="25" opacity="0">
		<padding>
			<Insets left="20"/>
		</padding>
		<HBox alignment="CENTER_LEFT" fx:id="readyButtonBox">
			<Button text="Ready" onAction="#ready" minWidth="150"/>
		</HBox> 
	</VBox>  
</fx:root>

